{
  "compilerOptions": {
    "allowJs": true,

    /* Path Aliases */
    "baseUrl": ".",
    "checkJs": true,
    /* Base Options: */
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* Strictness */
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext",
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ]
}
